{% extends 'base.html.twig' %} {% block title %}Hello jobController!{% endblock
%} {% block body %}
<div class="container-fluid"></div>
<div class="row">
  <div
    class="sidebar border border-right col-md-3 col-lg-2 p-0 bg-body-tertiary px-4"
    id="sidebar"
  >
    <h2 class="pb-2 border-bottom">Filter</h2>
    <div class="row g-1 py-1 row-cols-1">
      <h3 class="row">Categories</h3>
      <div class="row">
          <ul class="list-group">
              <li class="list-group-item {% if current_category == "" %}active{% endif %}">
                  <a href="{{ path('app_jobs') }}">All</a>
                </li>
                {% for category in categories %}
                <li class="list-group-item {% if category.id == current_category %}active{% endif %}">
                    <a href="{{ path('app_jobs', { category: category.id }) }}">{{
                        category.name
                    }}</a>
                </li>
                
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="row g-4 py-5 row-cols-1 ">
      <h3>Companies</h3>
      <ul class="list-group">
        <li class="list-group-item {% if current_company == "" %}active{% endif %}">
          <a href="{{ path('app_jobs') }}">All</a>
        </li>
        {% for company in companies %}
        <li class="list-group-item {% if company.id == current_company %}active{% endif %}">
             <a href="{{ path('app_jobs', { company: company.id }) }}">{{
            company.name
          }}</a>
        </li>

        {% endfor %}
      </ul>
    </div>
  </div>

  <div class="col-md-9 ms-sm-auto col-lg-10 px-md-4" id="featured-3">
    <h2 class="pb-2 border-bottom">All Jobs</h2>
    <div class="row g-4 py-5 row-cols-1 row-cols-lg-3">
      {% for job in jobs %}

      <div class="feature col">
        <div
          class="feature-icon d-inline-flex align-items-center justify-content-center text-bg-primary bg-gradient fs-2 mb-3"
        >
          <svg class="bi" width="1em" height="1em">
            <use xlink:href="#collection"></use>
          </svg>
        </div>
        <h3 class="fs-2 text-body-emphasis">{{ job.title }}</h3>
        <p>{{ job.description | raw }}</p>
        <a href="{{ path('app_job_show', { id: job.id }) }}" class="icon-link">
          More details
          <svg class="bi"><use xlink:href="#chevron-right"></use></svg>
        </a>
      </div>
      {% endfor %}
    </div>
  </div>
</div>
{% endblock %}
